{% sw_extends '@Storefront/storefront/page/product-detail/buy-widget.html.twig' %}

{% block page_product_detail_price %}
    {{ parent() }}
    {% block page_product_detail_refund %}
        {% if page.product.hasRefund.name != '' %}
            <p class="product-detail-price">
                {{ page.product.hasRefund.name }}
            </p>
        {% endif %}
        {% if page.product.hasRefund.calculated_price > 0 and page.product.hasRefund.name != '' %}
            <div class="product-detail-refund-container">
                {{ "refundsystem.general.exclusive"|trans|striptags }} {{ page.product.hasRefund.calculated_price|currency }} {{ "refundsystem.general.refund"|trans|striptags }}
            </div>
        {% endif %}
    {% endblock %}
{% endblock %}
